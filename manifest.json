{
  "manifest_version": 3,
  "name": "Dev Cookie Sync",
  "version": "1.2.0",
  "description": "Sync cookies between environments for development",

  "permissions": [
    "cookies",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },

  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
